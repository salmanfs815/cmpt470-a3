extends base

block content

  #userDiv
    p ALL USERS:
    table
      thead
        tr
          th Name
            span
              img#sort-name-asc(src='/img/sort-ascending.png' alt='Sort in ascending order by name')
              img#sort-name-des(src='/img/sort-descending.png' alt='Sort in descending order by name')
          th Email
            span
              img#sort-email-asc(src='/img/sort-ascending.png' alt='Sort in ascending order by email')
              img#sort-email-des(src='/img/sort-descending.png' alt='Sort in descending order by email')
          th Age
            span
              img#sort-age-asc(src='/img/sort-ascending.png' alt='Sort in ascending order by age')
              img#sort-age-des(src='/img/sort-descending.png' alt='Sort in descending order by age')
      tbody#users
        - var users = JSON.parse(allUsers)
        each user in users
          tr
            td= user.name
            td= user.email
            td= user.age
